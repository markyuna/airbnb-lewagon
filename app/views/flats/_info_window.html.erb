<%= link_to flat do %>
  <% if flat.photo.key.nil? %>
    <%= image_tag "no-image.png", class:"img-fluid width: 100% height: auto" %>
  <% else %>
    <%= cl_image_tag flat.photo.key, crop: :fill, class:"img-fluid width: 100% height: auto" %>
  <% end %>
  <div class="map-card">
    <p><span class="font-weight-bold" style="font: size 15px;"><i class="fa fa-location-arrow"></i></span>  <%= flat.address %> <strong><%= flat.city %></strong></p>
    <p><span class="font-weight-bold" style="font-size:15px;"><i class="fa fa-user"></i></span>  <%= flat.capacity %> people</p>
    <p>â‚¬/day <span class="font-weight-bold" style="font-size:30px; text-align:right; font-family:"><%= flat.price_per_day %></span></p>
  </div>
<% end %>
