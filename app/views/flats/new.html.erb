<h1>Rental details</h1>
<div class="container">
  <div class="rental_form">
    <%= simple_form_for [ @flat ] do |f| %>
      <%= f.input :price_per_day %>
      <%= f.input :address %>
      <%= f.input :availability %>
      <%= f.input :capacity %>
      <%= f.input :pictures, as: :file %>
      <%= f.submit "Add flat", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
